<config>
    <sections>
        <review translate="label" module="core">
            <class>separator-top</class>
            <label>Product Review</label>
            <tab>fvets</tab>
            <sort_order>610</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="core">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <fields>
                        <approvemailsendenabled translate="label" module="core">
                            <label>Envio de email de aprovação de review</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </approvemailsendenabled>

                        <approvemailsendtemplate translate="label">
                            <label>Approve Review Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </approvemailsendtemplate>

                        <approvemailsendidentity translate="label">
                            <label>Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </approvemailsendidentity>

                        <emailtosendtransactionalwarning translate="label" module="core">
                            <label>Enviar alerta de avaliação para (no momento em que cliente realiza avaliação)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Lista de emails separados por vírgula</comment>
                        </emailtosendtransactionalwarning>
                    </fields>
                </general>
                <raters translate="label" module="core">
                    <label>Avaliators Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <fields>
                        <statusname1 translate="label" module="core">
                            <label>Nome Status 1</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                        </statusname1>
                        <statusvalue1 translate="label" module="core">
                            <label>Valor Status 1</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                        </statusvalue1>
                        <statusname2 translate="label" module="core">
                            <label>Nome Status 2</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                        </statusname2>
                        <statusvalue2 translate="label" module="core">
                            <label>Valor Status 2</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                        </statusvalue2>
                        <statusname3 translate="label" module="core">
                            <label>Nome Status 3</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                        </statusname3>
                        <statusvalue3 translate="label" module="core">
                            <label>Valor Status 3</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                        </statusvalue3>
                        <statusname4 translate="label" module="core">
                            <label>Nome Status 4</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                        </statusname4>
                        <statusvalue4 translate="label" module="core">
                            <label>Valor Status 4</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                        </statusvalue4>
                    </fields>
                </raters>
            </groups>
        </review>
    </sections>
</config>