<config>
    <sections>
        <general module="core">
            <groups>
                <store_information>
                    <fields>
                        <alias translate="label">
                            <label>Alias</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </alias>>
                        <is_brand translate="label">
                            <label>Is a brand website</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </is_brand>
                    </fields>
                </store_information>
            </groups>
        </general>
        <web translate="label" module="core">
            <groups>
                <url translate="label">
                    <fields>
                        <original_link translate="label">
                            <label>Original Link URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </original_link>
                    </fields>
                </url>
            </groups>
        </web>
        <sales_email translate="label" module="sales">
            <groups>
                <order>
                    <fields>
                        <ignore_wildcard translate="label comment">
                            <label>Ignore emails with the domain (@</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                   Ex: 4vets.com.br<br />Os pedidos desse domínio serão enviados somente para o próprio domínio
                            ]]></comment>
                        </ignore_wildcard>
                    </fields>
                </order>
            </groups>
        </sales_email>
    </sections>
</config>