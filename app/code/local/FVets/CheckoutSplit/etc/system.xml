<config>
    <sections>
        <checkout_split translate="label" module="fvets_allin">
            <class>separator-top</class>
            <label>Checkout Split</label>
            <tab>fvets</tab>
            <sort_order>610</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="fvets_checkoutsplit">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <fields>
                        <checkout_total_obs translate="label" module="fvets_checkoutsplit">
                            <label>Observação no checkout sobre o total</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </checkout_total_obs>
                        <checkout_success_total_obs translate="label" module="fvets_checkoutsplit">
                            <label>Observação no Sucesso da Compra sobre o total</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </checkout_success_total_obs>
                    </fields>
                </general>
                <financial translate="label" module="fvets_checkoutsplit">
                    <label>Financeiro</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <fields>
                        <checkout_block_on_credit_limit translate="label" module="fvets_checkoutsplit">
                            <label>Bloquear usuário no checkout em caso de limite de crédito ultrapassado?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </checkout_block_on_credit_limit>
                        <checkout_block_on_credit_limit_message translate="label" module="fvets_checkoutsplit">
                            <label>Mensagem de bloqueio em caso de limite de crédito ultrapassado</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </checkout_block_on_credit_limit_message>
                        <checkout_block_on_payment_block translate="label" module="fvets_checkoutsplit">
                            <label>Bloquear usuário no checkout em caso de título vencido?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </checkout_block_on_payment_block>
                        <checkout_block_on_payment_block_message translate="label" module="fvets_checkoutsplit">
                            <label>Mensagem de bloqueio em caso de título vencido</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </checkout_block_on_payment_block_message>
                    </fields>
                </financial>
            </groups>
        </checkout_split>
    </sections>
</config>