<layout>
    <adminhtml_system_config_edit>
         <reference name="head">
           <action method="addCss"><name>gwap-boxes.css</name></action>
         </reference>
    </adminhtml_system_config_edit>
    
    <adminhtml_sales_order_view>
        <reference name="head">
            <action method="addItem">
                <type>js_css</type>
                <name>prototype/windows/themes/default.css</name>
            </action>
            <action method="addCss">
                <name>lib/prototype/windows/themes/magento.css</name>
            </action>
        </reference>    
        <reference name="before_body_end"> 
            <block type="core/template" name="refund.script" template="allpago_gwap/script.phtml">
            </block>
        </reference>           
    </adminhtml_sales_order_view>
    
    
    <gwap_adminhtml_order_removecredit>
        <reference name="content">
            <block type="gwap/adminhtml_refund_form"
                   name='adminhtml.refund.form' template="allpago_gwap/form.phtml">
            </block>
        </reference>
    </gwap_adminhtml_order_removecredit>    
    
</layout>

