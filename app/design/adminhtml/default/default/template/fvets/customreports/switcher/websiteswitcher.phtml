<?php $idsWebsitesAllowed = Mage::app()->getHelper('amrolepermissions')->currentRule()->getPartiallyAccessibleWebsites(); ?>
<?php $websites = Mage::getModel('core/website')
                        ->getCollection()
                        ->addIdFilter($idsWebsitesAllowed); ?>

<?php /* @var $this Mage_Core_Block_Template */ ?>
<?php if (isset($websites) && !empty($websites)): ?>
	<p class="switcher"><label for="website_switcher"><?php echo $this->__('Choose Website View:') ?></label>
		<?php $selectedWebsite = $this->getRequest()->getParam('website_switcher'); ?>
		<select name="website_switcher" id="website_switcher">
			<?php if (count($websites) > 1) { ?>
			<option value="0"><?php echo $this->__('All Websites'); ?></option>
			<?php } ?>
			<?php foreach ($websites as $website): ?>
<!--				--><?php //if ($website->getConfig('general/store_information/is_brand') == 1)
//				{
//					continue;
//				} ?>
				<?php if ($website->getCode() == 'base') {continue;} ?>
				<option
					value="<?php echo $this->escapeHtml($website->getId()) ?>"<?php if (isset($selectedWebsite) && $selectedWebsite == $website->getId()): ?> selected="selected"<?php endif; ?>>
					&nbsp;&nbsp;&nbsp;&nbsp;<?php echo $this->escapeHtml($website->getName()) ?></option>
			<?php endforeach; ?>
		</select>
		<?php echo $this->getHintHtml() ?>
	</p>
	<div id="store-switcher">

	</div>
<?php endif; ?>
