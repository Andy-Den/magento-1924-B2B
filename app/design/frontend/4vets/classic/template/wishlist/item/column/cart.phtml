/* @var $this Mage_Wishlist_Block_Customer_Wishlist_Item_Column_Cart */
/* @var Mage_Wishlist_Model_Item $item */
$item = $this->getItem();
$product = $item->getProduct();
?>
<div class="cart-cell">
<?php echo $this->getPriceHtml($product);?>
<div class="add-to-cart-alt">
<?php if ($product->isSaleable()): ?>
	<div class="input-append">
		<?php if ($item->canHaveQty() && $item->getProduct()->isVisibleInSiteVisibility()): ?>
		    <input type="text" class="form-control qty validate-not-negative-number col-md-2 text-center" name="qty[<?php echo $item->getId() ?>]" value="<?php echo $this->getAddToCartQty($item) * 1 ?>" />
		<?php endif; ?>
	    <button type="button" title="<?php echo $this->__('Add to Cart') ?>" onclick="addWItemToCart(<?php echo $item->getId()?>);" class="button btn-cart btn btn-success"><span><span><i class="glyphicon glyphicon-shopping-cart"></i>&nbsp;<?php echo $this->__('Add to Cart') ?></span></span></button>
    </div>
<?php else: ?>
	<div class="input-append">
	<?php if ($item->canHaveQty() && $item->getProduct()->isVisibleInSiteVisibility()): ?>
	    <input type="text" class="form-control qty validate-not-negative-number col-md-2 text-center" name="qty[<?php echo $item->getId() ?>]" value="<?php echo $this->getAddToCartQty($item) * 1 ?>" />
	<?php endif; ?>

    <?php if (!$product->getIsSalable()): ?>
        <p class="availability out-of-stock btn btn-inverse disabled"><span><?php echo $this->__('Out of stock') ?></span></p>
    <?php endif; ?>
    </div>
<?php endif; ?>
</div>
<?php foreach($this->getSortedChildren() as $childName):?>
    <?php echo $this->getChildHtml($childName, false);?>
<?php endforeach;?>
<?php if ($product->isVisibleInSiteVisibility()): ?>
    <p><a class="link-edit btn btn-inverse" href="<?php echo $this->getItemConfigureUrl($item) ?>"><i class="fa fa-edit"></i>&nbsp;<?php echo $this->__('Edit') ?></a></p>
<?php endif ?>
</div>
