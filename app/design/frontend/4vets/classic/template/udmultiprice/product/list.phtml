<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<?php
$_productCollection=$this->getLoadedProductCollection();
$_helper = $this->helper('catalog/output');
Mage::helper('udmultiprice')->attachPriceComparisonByState($_productCollection);

?>

<?php if ($this->getRequest()->getModuleName() == 'cms' && $this->getRequest()->getActionName() == 'index'): ?>
	<h3>NOVIDADES</h3>
	</div></div></div>
	<hr />
	<div class="container">
<?php endif; ?>

<?php if(!$_productCollection->count()): ?>
	<p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
	<div class="category-products">
	<?php echo $this->getToolbarHtml() ?>
	<?php // List mode ?>
	<?php if($this->getMode()!='grid'): ?>
		<?php $_iterator = 0; ?>
		<div class="products-list row" id="products-list">
			<?php foreach ($_productCollection as $_product):
				$priceCmp = $_product->getData('PriceComparisonByState');
				$priceCmpCnt = $_product->getData('PriceComparisonByStateCnt');
				$priceCmpStates = $_product->getData('PriceComparisonCanonicStates');
				?>
				<div class="item<?php if( ++$_iterator == sizeof($_productCollection) ): ?> last<?php endif; ?> col-md-12">
					<div class="row">
						<div class="col-md-3">
							<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image"><img class="lazy" data-original="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(200); ?>" width="200" height="200" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a>
						</div>
						<div class="col-md-9">
							<div class="product-shop">
								<div class="f-fix">
									<?php $_productNameStripped = $this->stripTags($_product->getName(), null, true); ?>
									<h2 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $_productNameStripped; ?>"><?php echo $_helper->productAttribute($_product, $_product->getName() , 'name'); ?></a></h2>
									<?php if($_product->getRatingSummary()): ?>
										<?php echo $this->getReviewsSummaryHtml($_product) ?>
									<?php endif; ?>
									<div class="col-md-4">
										<?php if (is_array($priceCmp) && !empty($priceCmp)): foreach ($priceCmp as $pCmpState=>$pCmp): ?>
											<p class="<?php echo @$priceCmpStates[$pCmpState]['html_value']?>-price">
												<span class="price-label"><?php echo Mage::helper('udmultiprice')->__('%s %s from', @$priceCmpCnt[$pCmpState]*1, @$priceCmpStates[$pCmpState]['html_label'])?></span>
												<span class="price"><strong><?php echo $this->helper('core')->formatPrice(@$pCmp[0])?></strong></span>
											</p>
										<?php endforeach; ?>
										<?php else: ?>
											<?php echo $this->getPriceHtml($_product, true) ?>
										<?php endif; ?>
										<div class="actions">
											<?php if($_product->isSaleable()): ?>
												<?php if($this->helper('customer')->isLoggedIn()): ?>
													<div class="relative">
														<a href="javascript:void(0)" class="increase" onclick="jQuery(this).parent().find('.qty').val(parseInt(jQuery(this).parent().find('.qty').val())+1)"><i class="glyphicon glyphicon-chevron-up"></i></a>
														<a href="javascript:void(0)" class="decrease" onclick="if(parseInt(jQuery(this).parent().find('.qty').val())>1){jQuery(this).parent().find('.qty').val(parseInt(jQuery(this).parent().find('.qty').val())-1)}"><i class="glyphicon glyphicon-chevron-down"></i></a>
														<input type="text" class="qty" value="1" />
														<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="btn btn-cart btn-success btn-larg" onclick="var url = '<?php echo Mage::getUrl('checkout/cart/add',  array('product' => $_product->getId(), 'qty'=>1)) ?>';url = url.split('qty/');setLocation(url[0]+'qty/'+jQuery(this).parent().find('.qty').val()+'/');"><span><span><i class="glyphicon glyphicon-shopping-cart glyphicon-white"></i>&nbsp;<?php echo $this->__('Add to Cart') ?></span></span></button>
													</div>
												<?php endif; ?>
											<?php else: ?>
												<p class="availability out-of-stock"><span class="label label-inverse"><?php echo $this->__('Out of stock') ?></span></p>
											<?php endif; ?>
											<?php if($this->helper('customer')->isLoggedIn()): ?>
												<ul class="add-to-links list-inline">
													<?php if ($this->helper('wishlist')->isAllow()) : ?>
														<li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" class="link-wishlist"><i class="glyphicon glyphicon-list-alt"></i>&nbsp;<?php echo $this->__('+ Lista') ?></a></li>
													<?php endif; ?>
													<?php if($_compareUrl=$this->getAddToCompareUrl($_product)): ?>
														<li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>" class="link-compare"><i class="glyphicon glyphicon-file"></i>&nbsp;<?php echo $this->__('+ Comparar') ?></a></li>
													<?php endif; ?>
												</ul>
											<?php endif; ?>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			<?php endforeach; ?>
		</div>
		<script type="text/javascript">decorateList('products-list', 'none-recursive')</script>

	<?php else: ?>

	<?php // Grid Mode ?>

		<?php echo $this->getChildHtml('product_grid_block'); ?>

	<?php endif; ?>

	<div class="toolbar-bottom">
		<?php echo $this->getToolbarHtml() ?>
	</div>
</div>
<?php endif; ?>