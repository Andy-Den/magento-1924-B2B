<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">

<!--	<div class="title">-->
<!--		--><?php //echo $this->__('Reviews of this product'); ?>
<!--	</div>-->
	<div class="review-title">
		<h2>OUTRAS AVALIAÇÕES</h2>
		<?php echo $this->getChildHtml('review_link'); ?>
	</div>
	<?php echo $this->getChildHtml('review_form'); ?>

	<div class="clear"></div>
	<br />

    <?php if (count($_items)):?>
        <?php echo $this->getChildHtml('toolbar') ?>
        <dl>
        <?php foreach ($_items as $_review):?>
            <dd>
				<div class="row users-reviews" id="users-reviews">
					<div class="col-sm-5 cols-users-review">

						<div class="user-review-image">
							<?php
							$_picture = Mage::helper('fvets_customer')->getCustomerImageUrl($_review->getCustomerId()); ?>
							<img src="<?php echo $_picture ?>"/>
							<br/>
						</div>

						<div class="nickname"> <?php echo $this->htmlEscape($_review->getNickname()); ?>
							<?php echo Mage::helper('review')->getCustomerLevel($_review->getCustomerId()) ?>
						</div>

					</div>
					<div class="col-sm-5 user-review-description cols-users-review">
						<h4><?php echo $this->htmlEscape($_review->getTitle()) ?></h4>
						<?php $_votes = $_review->getRatingVotes(); ?>
						<?php if (count($_votes)): ?>
							<table class="ratings-table" style="display: none">
								<?php foreach ($_votes as $_vote): ?>
									<?php $ratingValue = (int)$_vote->getValue() ?>
									<tr>
										<td class="text-left">
											<div class="rating-box">
												<div class="rating"
													 style="width:<?php echo $_vote->getPercent() ?>%;"><?php for ($i = 0; $i < (int)$_vote->getValue(); $i++): ?><?php endfor; ?></div>
											</div>
											&nbsp;&nbsp;&nbsp;<?php echo (int)$_vote->getValue(); ?> / 5
										</td>
									</tr>
								<?php endforeach; ?>
							</table>
						<?php endif; ?>

						<!--						<div class="clear"></div>-->
						<!--						--><?php //echo $this->__('%s', $this->formatDate($_review->getCreatedAt()), 'long') ?>
						<div class="clear"></div>

						"<?php echo nl2br($this->htmlEscape($_review->getDetail())) ?>"
					</div>

					<div class="rating-big col-sm-2 cols-users-review">
<!--						<div class="rating-value-container">-->
<!--							<span>--><?php //echo($ratingValue != 5 ? number_format($ratingValue * 2, 1) : number_format($ratingValue * 2, 0)); ?><!--</span>-->
<!--						</div>-->
						<div class="rating-box">
							<div class="rating" style="width:<?php echo ceil($ratingValue * 20) ?>%;"></div>
						</div>
					</div>

				</div>
            </dd>
        <?php endforeach; ?>
        </dl>
        <?php echo $this->getChildHtml('toolbar') ?>
    <?php endif; ?>
</div>
