<?php if( $this->getCollection() && $this->count()): ?>
<div class="box-account box-reviews well col-md-6">
    <div class="box-head row.fluid">
        <h4 class="col-md-8"><?php echo $this->__('My Recent Reviews') ?></h4>
        <div class="col-md-4"><a href="<?php echo $this->getAllReviewsUrl() ?>" class="btn btn-inverse"><?php echo $this->__('View All Reviews') ?></a></div>
    </div>
    <ol id="my_recent_reviews" class="list-unstyled">
    <?php $iterator = 0 ?>
    <?php foreach ($this->getCollection() as $_review): ?>
        <li class="item col-md-12">
        	<div class="row">
	            <span class="number col-md-1 text-center"><?php echo ++$iterator ?></span>
	            <div class="details col-md-11 text-left">
	                <a href="<?php echo $this->getReviewUrl($_review->getReviewId()) ?>"><?php echo $this->htmlEscape($_review->getName()) ?></a>
	                <?php if($_review->getSum()): ?>
	                    <div class="ratings row">
	                        <strong class="col-md-3"><?php echo $this->__('Rating:') ?></strong>
	                        <div class="rating-box col-md-8">
	                            <div class="rating">
	                            	<?php $counter = (int)(($_review->getSum()/$_review->getCount())/20); ?>
	                            	<?php for($i = 0; $i < $counter; $i++): ?>
	                            	<i class="fa fa-star"></i>
	                            	<?php endfor; ?>
	                            </div>
	                        </div>
	                    </div>
	                <?php endif; ?>
	            </div>
            </div>
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('my_recent_reviews');</script>
</div>
<?php endif; ?>
