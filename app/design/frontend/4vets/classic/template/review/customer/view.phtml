<?php if($this->getProductData()->getId()): ?>
<div class="product-review">
    <div class="page-title">
        <h3><?php echo $this->__('Review Details') ?></h3>
    </div>
    <div class="row">
	    <div class="product-img-box col-md-3">
	        <a href="<?php echo $this->getProductData()->getProductUrl() ?>" title="<?php echo $this->htmlEscape($this->getProductData()->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($this->getProductData(), 'small_image')->resize(201, 201); ?>" width="201" height="201" alt="<?php echo $this->htmlEscape($this->getProductData()->getName()) ?>" /></a>
	    </div>
	    <div class="product-details col-md-6">
	        <h4 class="product-name"><?php echo $this->htmlEscape($this->getProductData()->getName()) ?></h4>
	        <?php if( $this->getRating() && $this->getRating()->getSize()): ?>
	        <h5><?php echo ($this->isReviewOwner()) ? $this->__('Your Rating:') : $this->__('Rating:'); ?></h5>
	        <table class="ratings-table table table-bordered table-striped">
	        <?php foreach ($this->getRating() as $_rating): ?>
	        <?php if($_rating->getPercent()): ?>
	            <tr>
	                <th><?php echo $this->escapeHtml($_rating->getRatingCode()) ?></th>
	                <td>
	                    <div class="rating-box">
	                        <div class="rating" >
		                        <?php $counter = (int)(ceil($_rating->getPercent())/20); ?>
	                        	<?php for($i = 0; $i < $counter; $i++): ?>
	                        	<i class="fa fa-star"></i>
	                        	<?php endfor; ?>
	                        </div>
	                    </div>
	                </td>
	            </tr>
	        <?php endif; ?>
	        <?php endforeach; ?>
	        </table>
	        <?php endif; ?>
	        <dl>
	            <dt>
	            	<u>
	                <?php if ($this->isReviewOwner()): ?>
	                    <?php echo $this->__('Your Review (submitted on %s):', $this->dateFormat($this->getReviewData()->getCreatedAt())) ?>
	                <?php else :?>
	                    <?php echo $this->__('Review (submitted on %s):', $this->dateFormat($this->getReviewData()->getCreatedAt())) ?>
	                <?php endif;?>
	                </u>
	            </dt>
	            <dd>
	                <?php echo nl2br($this->htmlEscape($this->getReviewData()->getDetail())) ?>
	            </dd>
	        </dl>
	    </div>
    </div>
    <div class="buttons-set">
        <p class="back-link"><a href="<?php echo $this->getBackUrl() ?>"><small>&laquo; </small><?php echo $this->__('Back to My Reviews') ?></a></p>
    </div>
</div>
<?php endif; ?>
