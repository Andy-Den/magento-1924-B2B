<?xml version="1.0"?>
<layout>
    <umicrosite_index_default>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
            <action method="setLayoutCode"><code>two_columns_left</code></action>
        </reference>
        <reference name="head">
            <action method="setTitle">
                <title helper="umicrosite/getVendorSharedName" />
            </action>
            <action method="addCss"><stylesheet>css/unirgy/umicrosite.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/catalog/product.js</name></action>
        </reference>
        <reference name="header">
            <block type="umicrosite/home" name="header_banners" as="header_banners" template="unirgy/microsite/banner.phtml">
                <block type="bannerslider/default" name="top_banner" template="bannerslider/bannerslider.phtml"/>
            </block>
        </reference>
        <reference name="left">
            <block type="catalog/layer_view" name="catalog.leftnav" before="-" template="catalog/layer/view.phtml"/>
        </reference>
        <reference name="content">
            <block type="umicrosite/home" template="unirgy/microsite/home.phtml" name="vendorHome">
                <block type="bannerslider/default" name="content_banner" template="bannerslider/bannerslider.phtml"/>
                <block type="umicrosite/frontend_vendorProducts" name="product_list" template="catalog/product/list.phtml">
                    <block type="umicrosite/frontend_vendorProducts" name="product_grid_block" template="catalog/product/list/grid.phtml">
                        <action method="setColumnCount"><count>4</count></action>
                    </block>
                    <block type="catalog/product_list_toolbar" name="product_list_toolbar" template="catalog/product/list/toolbar.phtml">
                        <action method="setDefaultGridPerPage"><limit>8</limit></action>
                        <block type="page/html_pager" name="product_list_toolbar_pager"/>
                    </block>
                    <action method="addColumnCountLayoutDepend"><layout>empty</layout><count>6</count></action>
                    <action method="addColumnCountLayoutDepend"><layout>one_column</layout><count>5</count></action>
                    <action method="addColumnCountLayoutDepend"><layout>two_columns_left</layout><count>4</count></action>
                    <action method="addColumnCountLayoutDepend"><layout>two_columns_right</layout><count>4</count></action>
                    <action method="addColumnCountLayoutDepend"><layout>three_columns</layout><count>3</count></action>
                    <action method="setToolbarBlockName"><name>product_list_toolbar</name></action>
                </block>
                <block type="fvets_dropshipMicrosite/frontend_bestsellerVendorProducts" name="bestseller_product_list"  template="catalog/category/level2/bestseller.phtml">
                    <block type="fvets_dropshipMicrosite/frontend_bestsellerVendorProducts" name="product_grid_block" template="catalog/product/list/grid.phtml">
                        <action method="setColumnCount"><count>4</count></action>
                    </block>
                </block>
                <block type="fvets_dropshipMicrosite/frontend_latestVendorProducts" name="latest_product_list" template="catalog/category/level2/new.phtml">
                    <block type="fvets_dropshipMicrosite/frontend_latestVendorProducts" name="product_grid_block" template="catalog/product/list/grid.phtml">
                        <action method="setColumnCount"><count>4</count></action>
                    </block>
                </block>
            </block>
        </reference>
    </umicrosite_index_default>
</layout>