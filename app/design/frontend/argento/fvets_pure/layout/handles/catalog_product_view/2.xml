<include_layout version="0.1.0">
    <catalog_product_view>
        <update handle="page_one_column"/>
        <update handle="product_info_soldtogethercustomer_1"></update>
        <update handle="block_product_view_tabs_1"></update>

        <remove name="product.info.soldtogetherorder" />

        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>less/handles/catalog_product_view/1.less</name></action>
            <action method="addItem"><type>skin_css</type><name>less/blocks/catalog/product/view/addtocart/1.less</name></action>
            <action method="addItem"><type>skin_css</type><name>less/blocks/catalog/product/price/1.less</name></action>
            <action method="addItem"><type>skin_css</type><name>less/blocks/catalog/product/view/media/1.less</name></action>
            <action method="addItem"><type>skin_css</type><name>less/blocks/tm/prolabel/1.less</name></action>
        </reference>
        <reference name="product.info.addtocart">
            <action method="setTemplate"><template>catalog/product/view/addtocart/1.phtml</template></action>
        </reference>

        <reference name="product.review.form">
            <action method="setTemplate"><template>review/form/1.phtml</template></action>
        </reference>
        <reference name="askit_tabbed.child0">
            <action method="setTemplate"><template>catalog/product/view/additional/askit/question/form/1.phtml</template></action>
        </reference>
        <reference name="product.info">
            <action method="setTemplate"><template>catalog/product/view/2.phtml</template></action>
        </reference>
        <reference name="product.info.additional">
            <remove name="product.quote" />
            <block type="catalog/product_list_related" name="catalog.product.related.4vets" as="catalog_product_related_4vets" before="product.info.soldtogethercustomer">
                <action method="setTemplate"><template>catalog/product/list/carousel/1.phtml</template></action>
                <action method="setTitle"><title>Related</title></action>
            </block>
        </reference>
    </catalog_product_view>
</include_layout>