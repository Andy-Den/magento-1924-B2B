<?php	$conditions = $this->getConditions();?><ul class="onestepcheckout-box-ok">	<li class="inner-box-ok"><div class="triangle"></div><i class="fa fa-check"></i></li>	<li class="clearfix"><h4><?php echo $this->__('Payment Conditions'); ?></h4></li>	<?php $count = 0; ?>	<?php foreach ($conditions as $condition) : ?>	<li class="clearfix">		<input type="radio" onclick="changePaymentCondition(<?php echo $condition->getDiscount(); ?>, <?php echo $condition->getSplit(); ?>)" name="fvets_quote_conditions" <?php if($count++ == 0) : ?>checked="checked"<?php endif; ?> value="<?php echo $condition->getId(); ?>" /> <?php echo $condition->getName(); ?>		<?php if ($condition->getDiscount()): ?>			(<?php echo $condition->getDiscount(); ?>% de desconto)		<?php endif; ?>	</li>	<?php endforeach; ?></ul><script>	var lastDiscount = <?php echo $conditions->getFirstItem()->getDiscount(); ?>;	var lastIsStallment = Boolean(<?php echo $conditions->getFirstItem()->getSplit(); ?> > 1);	function changePaymentCondition(newDiscount, newIsStallment)	{		if ((lastDiscount != newDiscount) || (lastIsStallment != Boolean(newIsStallment > 1)))		{			var url = '<?php echo $this->getUrl('onestepcheckout/ajax/set_methods_separate', array('_secure'=>true)); ?>';			get_separate_save_methods_function(url)();			lastDiscount = newDiscount;			lastIsStallment = Boolean(newIsStallment > 1);		}	}</script>