$_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if($_product->isSaleable() && Mage::helper('privatesales')->canShowPricesAndAddToCartButton()): ?>
	<div class="add-to-cart">
		<?php if(!$_product->isGrouped()): ?>
			<div id="btnAddCart"><button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="addToCart('<?php echo $this->getAddToCartUrl($_product) ?>', <?php echo $_product->getId(); ?>)"><span><span><?php echo $buttonTitle ?></span></span></button></div>
			<div id="divQtd">
				<input type='button' value='-' class='qtyminus' field='qty-<?php echo $_product->getId(); ?>' />
				<input type='text' name='quantity' value='1' class='qty' id="qty-<?php echo $_product->getId(); ?>"/>
				<input type='button' value='+' class='qtyplus' field='qty-<?php echo $_product->getId(); ?>' />
			</div>
		<?php endif; ?>
		<?php echo $this->getChildHtml('', true, true) ?>
	</div>
<?php endif; ?>
